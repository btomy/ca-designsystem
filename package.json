{
  "name": "cads",
  "description": "Citizens Advice Design System",
  "homepage": "https://citizensadvice.github.io/cads/",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "lerna": "^3.4.3",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.2"
  },
  "scripts": {
    "clean": "rm -rf ./_site/ && rm -rf ./.sass-cache/",
    "build:packages": "lerna run build",
    "build:website": "bundle exec jekyll build",
    "clean:packages": "lerna run clean",
    "compilecss": "node-sass --output-style compressed --include-path ./node_modules/ --include-path ./src/styles/ ./src/styles/docs.scss ./src/styles/docs.css",
    "lint:styles": "stylelint \"packages/**/*.scss\" --syntax scss --quiet",
    "modules:reset": "npm-run-all -s clean:modules fresh",
    "packages:bump": "lerna version --skip-git",
    "serve": "bundle exec jekyll serve",
    "start": "npm-run-all -p watchcss serve",
    "watchcss": "nodemon --watch ./packages --watch ./src/styles --ext scss --exec \"npm run compilecss\"",
    "publish:packages": "yarn build:packages && npm login && lerna publish --skip-git && lerna version --skip-git",
    "publish:website": "yarn build:website && gh-pages -d ./_site"
  }
}
