{
  "name": "cads",
  "description": "Citizens Advice Design System",
  "version": "0.0.0",
  "homepage": "https://citizensadvice.github.io/cads/",
  "private": true,
  "workspaces": [
    "_framework/*"
  ],
  "devDependencies": {
    "cads-system": "0.0.0",
    "gh-pages": "^2.0.1",
    "lerna": "^3.4.3",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "fresh": "yarn && lerna bootstrap",
    "clean": "npm-run-all -s clean:framework clean:sandbox clean:website clean:modules",
    "build:framework": "lerna run build",
    "build:sandbox": "cd ./_sandbox/ && bundle install && bundle exec jekyll build",
    "build:website": "cd ./_website/ && bundle install && bundle exec jekyll build",
    "clean:framework": "lerna run clean",
    "clean:sandbox": "rm -rf ./_sandbox/_site/ && rm -rf ./_sandbox/.sass-cache/",
    "clean:website": "rm -rf ./_website/_site/ && rm -rf ./_website/.sass-cache/",
    "clean:modules": "rm -rf ./node_modules/",
    "compilecss:all": "npm-run-all compilecss:website compilecss:sandbox",
    "compilecss:website": "node-sass --output-style compressed --include-path ./node_modules/ --include-path ./_website/src/styles/ ./_website/src/styles/docs.scss ./_website/src/styles/docs.css",
    "compilecss:sandbox": "node-sass --output-style compressed --include-path ./node_modules/ --include-path ./_sandbox/src/styles/ ./_sandbox/src/styles/sandbox.scss ./_sandbox/src/styles/sandbox.css",
    "framework:bump": "lerna version --skip-git",
    "framework:release": "yarn publish",
    "serve:sandbox": "cd ./_sandbox/ && bundle install && bundle exec jekyll serve",
    "serve:website": "cd ./_website/ && bundle install && bundle exec jekyll serve",
    "start:sandbox": "npm-run-all -p watchcss:all serve:sandbox",
    "start:website": "npm-run-all -p watchcss:all serve:website",
    "watchcss:all": "nodemon --watch ./_framework --watch ./_website/src/styles --watch ./_sandbox/src/styles --ext scss --exec \"npm run compilecss:all\"",
    "publish:framework": "npm-run-all -s build:framework framework:bump framework:release",
    "publish:website": "yarn build:website && gh-pages -d ./_website/_site"
  }
}
