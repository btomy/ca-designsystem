{
  "name": "cadesignsystem",
  "description": "Citizens Advice Design System",
  "version": "0.0.1",
  "homepage": "https://citizensadvice.github.io/ca-designsystem/",
  "private": true,
  "workspaces": [
    "framework/*"
  ],
  "scripts": {
    "clean": "yarn-run-all -s clean:framework clean:sandbox clean:website clean:modules",
    "clean:framework": "lerna run clean",
    "clean:sandbox": "rm -rf ./sandbox/_site/ && rm -rf ./sandbox/.sass-cache/",
    "clean:website": "rm -rf ./website/_site/ && rm -rf ./sandbox/.sass-cache/",
    "clean:modules": "rm -rf ./node_modules/",
    
    "serve:sandbox": "cd ./sandbox/ && bundle install && bundle exec jekyll serve --watch",
    "serve:website": "cd ./website/ && bundle install && bundle exec jekyll serve --watch",
    
    "build:framework": "lerna run build",
    "build:sandbox": "cd ./sandbox/ && bundle install && bundle exec jekyll build",
    "build:website": "cd ./website/ && bundle install && bundle exec jekyll build",
    
    "framework:bump": "lerna version --skip-git",
    "framework:release": "yarn publish",
    "framework:publish": "yarn-run-all -s build:framework framework:bump framework:release",

    "fresh": "yarn && lerna bootstrap"
  },
  "devDependencies": {
    "@cads/system": "0.0.1",
    "gh-pages": "^2.0.1",
    "lerna": "^3.4.3",
    "node-sass": "^4.10.0",
    "yarn-run-all": "^3.1.1"
  }
}
