{
  "name": "cadesignsystem",
  "version": "1.0.8",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start":                         "npm-run-all --sequential compile-css --parallel watch-docs serve-docs",
    "start-sandbox":                 "npm-run-all --parallel watch-sandbox serve-sandbox",
    "build-docs":                    "bundle exec jekyll build",
    "compile-css-framework":         "node-sass --output-style expanded scss/_cabui.scss dist/css/cabui.css",
    "compile-css-framework-to-docs": "node-sass --output-style expanded scss/_cabui.scss site/docs/1.0/assets/dist/css/cabui.css",
    "compile-css-docs":              "node-sass --output-style expanded site/docs/1.0/assets/scss/docs.scss site/docs/1.0/assets/dist/css/docs.css",
    "compile-css-sandbox":           "node-sass --output-style expanded sandbox/assets/scss/app.scss sandbox/assets/dist/css/app.css",
    "compile-css":                   "npm run compile-css-framework-to-docs && npm run compile-css-docs && npm run compile-css-sandbox",
    "clean-all":                     "npm-run-all --sequential clean-framework clean-docs clean-site",
    "clean-framework":               "rm -rf dist/",
    "clean-docs":                    "rm -rf site/docs/1.0/assets/dist/",
    "clean-site":                    "rm -rf _site/",
    "copy-assets":                   "mkdir dist/images/ && cp -R site/docs/1.0/assets/images/* dist/images",
    "dist-framework":                "npm-run-all --sequential clean-framework compile-css-framework minify-css-framework copy-assets",
    "minify-css-framework":          "node-sass --output-style compressed scss/_cabui.scss dist/css/cabui.min.css",
    "publish-docs":                  "npm run build-docs && git subtree push --prefix _site/ origin gh-pages",
    "serve-docs":                    "bundle exec jekyll serve",
    "serve-sandbox":                 "browser-sync start --port 5000 --server 'sandbox/' --files 'sandbox/'",
    "watch-docs":                    "npm-run-all --parallel watch-css-framework watch-css-docs",
    "watch-sandbox":                 "npm-run-all --parallel watch-css-framework watch-css-sandbox",
    "watch-css-framework":           "nodemon --watch scss/ --ext scss --exec \"npm run compile-css\"",
    "watch-css-docs":                "nodemon --watch site/docs/1.0/assets/scss --ext scss --exec \"npm run compile-css\"",
    "watch-css-sandbox":             "nodemon --watch sandbox/assets/scss/ --ext scss --exec \"npm run compile-css-sandbox\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "files": [
    "dist",
    "scss"
  ],
  "devDependencies": {
    "browser-sync": "^2.24.7",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3"
  }
}
